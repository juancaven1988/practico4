package grafica.ventana;

import java.awt.EventQueue;
import java.awt.Font;
import java.awt.Image;
import java.awt.Toolkit;

import javax.swing.ImageIcon;
import javax.swing.JFrame;
import javax.swing.JLabel;

public class ExceptionWindow {

	private JFrame errorFrame;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					ExceptionWindow window = new ExceptionWindow();
					window.errorFrame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public ExceptionWindow() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		errorFrame = new JFrame();
		errorFrame.setResizable(false);
		errorFrame.setTitle("Error");
		errorFrame.setIconImage(Toolkit.getDefaultToolkit().getImage(ExceptionWindow.class.getResource("/grafica/imagenes/pngwing.com.png")));
		errorFrame.setBounds(100, 100, 396, 193);
		errorFrame.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
		errorFrame.getContentPane().setLayout(null);
		
		JLabel lblError = new JLabel("Error: ");
		lblError.setFont(new Font("Microsoft Tai Le", Font.BOLD, 15));
		lblError.setBounds(81, 11, 66, 33);
		errorFrame.getContentPane().add(lblError);
		
		Image errorImage = new ImageIcon(getClass().getResource("/imagenes/pngwing.png")).getImage();
		Image sclError = errorImage.getScaledInstance(50, 50, java.awt.Image.SCALE_SMOOTH);
		ImageIcon errorIcon = new ImageIcon(sclError);
		
		JLabel lblIcon = new JLabel("");
		lblIcon.setIcon(errorIcon);
		lblIcon.setBounds(10, 11, 50, 50);
		errorFrame.getContentPane().add(lblIcon);
	}
}
