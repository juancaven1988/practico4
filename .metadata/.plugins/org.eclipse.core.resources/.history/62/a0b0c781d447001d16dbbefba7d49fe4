	public void activarPrincipal() {
		activo.setVisible(false);
		panelPrincipal.setVisible(true);
		activo = panelPrincipal;
	}
	
	public void activarInsertar() {
		
		activo.setVisible(false);
		panelInsertar.setVisible(true);
		activo = panelInsertar;
	
	}
}
