package grafica.ventana;

import java.awt.Color;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;

import javax.swing.JFrame;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;

import grafica.controladores.MenuController;

public class MenuBar extends JMenuBar {

	private static final long serialVersionUID = 1L;
	MenuController controller;
	
	
	public MenuBar(DuenosFrame duenos, MascotasFrame mascotas, JFrame actual) {
		super();
		this.setBorderPainted(false);
		this.setBorder(null);
		this.setBackground(new Color(255, 255, 255));
		controller = new MenuController();
		
		JMenu mnMenu = new JMenu("<html><U>I</U>nicio</html>");
	
		mnMenu.setBorder(null);
		this.add(mnMenu);
		
		JMenuItem mntmSalir = new JMenuItem("<html><U>S</U>alir</html>");
		mntmSalir.setBackground(Color.WHITE);
		mnMenu.add(mntmSalir);
		
		JMenu mndueo = new JMenu("<html><U>D</U>ue√±o</html>");
		mndueo.setBorder(null);
		this.add(mndueo);
		
		JMenuItem mntmInsertar = new JMenuItem("Insertar");
		
		mntmInsertar.setBackground(Color.WHITE);
		mndueo.add(mntmInsertar);
		
		JMenuItem mntmBorrar = new JMenuItem("Borrar");
		mntmBorrar.setBackground(Color.WHITE);
		mndueo.add(mntmBorrar);
		
		JMenuItem mntmListar = new JMenuItem("Listar");
		mntmListar.setBackground(Color.WHITE);
		mndueo.add(mntmListar);
		
		JMenu mnmascotas = new JMenu("<html><U>M</U>ascotas</html>");
		mnmascotas.setBorder(null);
		this.add(mnmascotas);
		
		JMenuItem mntmInsertar_1 = new JMenuItem("Nueva");
		mntmInsertar_1.setBackground(Color.WHITE);
		mnmascotas.add(mntmInsertar_1);
		
		JMenuItem mntmInsertar_1_1 = new JMenuItem("Listado");
		mntmInsertar_1_1.setBackground(Color.WHITE);
		mnmascotas.add(mntmInsertar_1_1);
		
		JMenuItem mntmInsertar_1_1_1 = new JMenuItem("Buscar");
		mntmInsertar_1_1_1.setBackground(Color.WHITE);
		mnmascotas.add(mntmInsertar_1_1_1);
		
		JMenuItem mntmInsertar_1_1_1_1 = new JMenuItem("Contar");
		mntmInsertar_1_1_1_1.setBackground(Color.WHITE);
		mnmascotas.add(mntmInsertar_1_1_1_1);
		
		mntmSalir.addMouseListener(new MouseAdapter() {
			@Override
			public void  mousePressed(MouseEvent e) {
				System.exit(0);
			}
		});
		
		mntmInsertar.addMouseListener(new MouseAdapter() {
			@Override
			public void mousePressed(MouseEvent e) {
				if(duenos == null)
				{
					actual.dispose();
				}
				controller.insertarDueno(duenos);
			}
		});
	}

}
